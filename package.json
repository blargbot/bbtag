{
    "name": "bbtag",
    "version": "1.0.0",
    "description": "The engine behind blargbots custom commands",
    "scripts": {
        "lint-fix": "tslint --project tsconfig.json --format stylish --fix",
        "lint": "tslint --project tsconfig.json --format stylish",
        "watch": "tsc -w",
        "clean": "del-cli **/*.js **/*.js.map coverage .nyc_output !node_modules/**/*.*",
        "build": "tsc",
        "rebuild": "npm run clean && npm run build && npm run lint",
        "test": "mocha",
        "coverage": "nyc npm test",
        "pack": "npm run rebuild && npm pack"
    },
    "repository": {
        "type": "git",
        "url": "https://www.github.com/blargbot/bbtag"
    },
    "author": "blargbot",
    "license": "AGPL-3.0",
    "dependencies": {
        "moment-timezone": "^0.5.25"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^0.1.3",
        "@types/chai": "^4.1.7",
        "@types/mocha": "^5.2.7",
        "@types/moment-timezone": "^0.5.12",
        "@types/node": "^10.14.13",
        "chai": "^4.2.0",
        "del-cli": "^2.0.0",
        "mocha": "^6.1.4",
        "nyc": "^14.1.1",
        "source-map-support": "^0.5.12",
        "ts-node": "^8.3.0",
        "tslint": "^5.18.0",
        "typescript": "^3.5.2"
    },
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "all": true,
        "check-coverage": true,
        "lines": 70,
        "require": [
            "ts-node/register"
        ],
        "exclude": [
            "**/*.d.ts",
            "coverage/**",
            "packages/*/test/**",
            "test/**",
            "test{,-*}.ts",
            "**/*{.,-}{test,spec}.ts",
            "**/__tests__/**",
            "**/node_modules/**",
            "samples/**"
        ],
        "reporter": [
            "text-summary",
            "html"
        ]
    }
}